<Window x:Class="dExcelManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dExcelManager"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="∂Excel Installer" Height="450" Width="800">
    <Window.Resources>
      <Style TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Margin" Value="5" />
      </Style>
    </Window.Resources>
    <Grid>
    
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <TextBlock
        Grid.Row="0"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        Style="{StaticResource Header1}"
        Text="∂Excel Installer"/>

      <Image
        Name="dExcelIcon"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Grid.Row="0"
        Grid.RowSpan="2"
        Grid.Column="7"
        Margin="5"
        Width="40"
        Source="/resources/icons/dXL-logo.ico"/>

      <materialDesign:Card
        Grid.Row="1"
        Grid.RowSpan="4"
        Grid.Column="0"
        Grid.ColumnSpan="8">
        <StackPanel>
          <TextBlock Text="Check if old ∂Excel is in %appdata%."/>
          <TextBlock Text="Warn if not connected to VPN or network."/>
          <TextBlock Text="Check if user is admin on current machine."/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Current ∂Excel Version: "/>
            <TextBlock Text="1.2" Style="{StaticResource OutputText}"/>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Switching/Updating to ∂Excel Version: "/>
            <TextBlock Text="1.3" Style="{StaticResource OutputText}"/>
          </StackPanel>
        </StackPanel>
      </materialDesign:Card>
      <Button
        Name="Install"
        Grid.Row="9"
        Grid.Column="6"
        Style="{StaticResource StandardButton}"
        Content="Install"
        Click="Install_Click"/>
      <Button
        Name="Cancel"
        Grid.Row="9"
        Grid.Column="7"
        Style="{StaticResource StandardButton}"
        Content="Cancel"/>
  </Grid>
</Window>
